<?xml
    version="1.0"
    encoding="UTF-8"
?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity
        name="olml89\XenforoBotsBackend\Bot\Domain\Subscription\Subscription"
        table="subscriptions"
    >
        <id
            name="subscriptionId"
            column="subscription_id"
            type="uuid"
        />
        <field
            name="subscribedAt"
            column="subscribed_at"
            type="unix_timestamp"
        />
        <field
            name="isActive"
            column="is_active"
            type="boolean"
        />
        <field
            name="activationChangedAt"
            column="activation_changed_at"
            type="unix_timestamp"
        />
        <one-to-one
            field="bot"
            target-entity="olml89\XenforoBotsBackend\Bot\Domain\Bot"
            mapped-by="subscription"
        >
            <join-column
                name="bot_id"
                referenced-column-name="bot_id"
            />
        </one-to-one>
    </entity>
</doctrine-mapping>

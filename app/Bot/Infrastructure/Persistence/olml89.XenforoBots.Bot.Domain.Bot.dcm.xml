<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="olml89\XenforoBots\Bot\Domain\Bot" table="bots">
        <indexes>
            <index name="idx_id" columns="id"/>
        </indexes>

        <id name="id" column="id" type="string"></id>
        <field name="userId" column="user_id" type="AutoId" nullable="false" unique="true" />
        <field name="name" column="name" type="string" column-definition="VARCHAR(50) NOT NULL" unique="true" />
        <field name="password" column="password" type="password" column-definition="VARCHAR(72) NOT NULL" />
        <field name="registeredAt" column="registered_at" type="datetime" nullable="false" />

    </entity>

</doctrine-mapping>

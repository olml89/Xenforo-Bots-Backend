<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="olml89\XenforoBotsBackend\Reply\Domain\Reply" table="replies">

        <indexes>
            <index
                name="idx_id"
                columns="id"
            />
        </indexes>

        <unique-constraints>
            <unique-constraint columns="content_id,type" name="idx_content_id_type" />
        </unique-constraints>

        <id
            name="id"
            column="id"
            type="uuid"
        />

        <field
            name="type"
            column="type"
            enumType="olml89\XenforoBotsBackend\Reply\Domain\ContentType"
        />

        <field
            name="contentId"
            column="content_id"
            type="auto_id"
        >
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field
            name="containerId"
            column="container_id"
            type="auto_id"
        >
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field
            name="content"
            column="content"
            type="text"
        />

        <field
            name="response"
            column="response"
            type="text"
            nullable="true"
        />

        <field
            name="createdAt"
            column="created_at"
            type="datetime_immutable"
        />

        <field
            name="processedAt"
            column="processed_at"
            type="datetime_immutable"
            nullable="true"
        />

        <field
            name="publishedAt"
            column="published_at"
            type="datetime_immutable"
            nullable="true"
        />

        <many-to-one
            field="bot"
            target-entity="olml89\XenforoBotsBackend\Bot\Domain\Bot"
            fetch="EAGER"
            orphan-removal="true"
        >
            <join-column
                name="bot_id"
                referenced-column-name="id"
            />
        </many-to-one>

    </entity>

</doctrine-mapping>

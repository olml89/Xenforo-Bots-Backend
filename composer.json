{
    "name": "olml89/xenforo-bots-backend",
    "type": "project",
    "description": "This is a backend platform to interact with the Xenforo Bots add-on and implement bot users that can interact in a human-like way with the rest of the users.",
    "keywords": ["xenforo", "bots", "backend"],
    "license": "MIT",
    "version": "1.0.0",
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "doctrine/migrations": "^3.7",
        "doctrine/orm": "^3.0",
        "symfony/cache": "^7.0",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^11.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "olml89\\XenforoBotsBackend\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "create-database": [
            "@php artisan app:create-database --migrate"
        ],
        "create-testing-database": [
            "@php artisan app:create-database --migrate --env=testing"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
